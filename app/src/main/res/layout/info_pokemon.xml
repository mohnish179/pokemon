<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/relative_layout"
        android:layout_height="match_parent"
        android:weightSum="100">



        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:id="@+id/cardview"
            android:elevation="4dp"
            app:cardCornerRadius="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="15dp"
            >

            <TextView
                android:id="@+id/info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_gravity="center_horizontal"


                android:layout_marginTop="200dp"
                android:text="Pokemon"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="260dp"

                android:text="id:"

                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="330dp"


                android:text="Height:"
                android:layout_marginLeft="70dp"


                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="330dp"
                android:layout_marginLeft="200dp"

                android:text="weight:"
                android:textSize="20sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="400dp"
                android:text="Type:"

                android:textSize="20sp" />
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="65dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               app:cardCornerRadius="10dp"
               android:id="@+id/tcv"
               android:layout_marginTop="440dp"
               />

            <TextView
                android:id="@+id/tv7"
                android:elevation="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="85dp"
                android:layout_marginTop="450dp"
                android:text="normal"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="230dp"
                android:layout_marginLeft="93dp"
                android:layout_marginTop="450dp"
                android:elevation="10dp"
                android:text="normal"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv10"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"



                android:layout_marginTop="510dp"
                android:layout_marginLeft="150dp"

                android:gravity="center_horizontal"
                android:text="@string/about"
                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="570dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textSize="25sp"
                android:layout_marginBottom="50dp"
                android:textAlignment="center"
                android:id="@+id/tv9"
                android:gravity="center_horizontal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Region"
                android:layout_marginTop="800dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_below="@+id/tv19"

                android:layout_gravity="center_horizontal"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="850dp"
                android:layout_marginRight="20dp"
                android:id="@+id/rcv"
                android:elevation="9dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="20dp"
                android:layout_height="60dp">


            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="loading..."
                android:layout_marginTop="860dp"
                android:id="@+id/tv11"
                android:elevation="10dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="25sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:textSize="35sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="910dp"
                />
            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="950dp"
                android:layout_marginLeft="120dp"
                android:id="@+id/chart"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="953dp"
                android:text="Hp:"
                android:textSize="20sp"
                android:id="@+id/hp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="995dp"
                android:textSize="20sp"
                android:text="Attack:"
                android:id="@+id/attack"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1040dp"
                android:textSize="20sp"
                android:text="Defense:"
                android:id="@+id/defense"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1080dp"
                android:textSize="20sp"
                android:text="Sp. Atk :"
                android:id="@+id/spattack"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1125dp"
                android:textSize="20sp"
                android:text="Sp. Def :"
                android:id="@+id/spdef"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1170dp"
                android:layout_marginBottom="30dp"
                android:textSize="20sp"
                android:text="Speed :"
                android:id="@+id/speed"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evolution"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:textSize="35sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1250dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1330dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/ecv1"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/ei1"
                android:layout_marginBottom="15dp"
                android:scaleType="fitXY"
              android:layout_marginLeft="15dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="40dp"
                android:text="loading..."
                android:textSize="20sp"

                android:id="@+id/et1"
                android:layout_marginLeft="150dp"
                />
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1460dp"
                android:id="@+id/ecv2"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/ei2"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="loading..."
                    android:textSize="20sp"

                    android:id="@+id/et2"
                    android:layout_marginLeft="150dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1590dp"
                android:id="@+id/ecv3"


                app:cardCornerRadius="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                >
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:id="@+id/ei3"
                    android:layout_marginBottom="15dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="15dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="loading..."
                    android:textSize="20sp"

                    android:id="@+id/et3"
                    android:layout_marginLeft="150dp"
                    />
            </androidx.cardview.widget.CardView>





        </androidx.cardview.widget.CardView>
        <ImageView
            android:elevation="8dp"
            android:id="@+id/info_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="52dp"
            android:src="@color/colorAccent"
            android:layout_marginLeft="52dp" />


    </RelativeLayout>


</androidx.core.widget.NestedScrollView>